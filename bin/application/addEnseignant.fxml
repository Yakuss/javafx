<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane fx:controller="application.AddEnseignantController" xmlns:fx="http://javafx.com/fxml">

    
    <Label text="Nom:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="nomField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    
    <Label text="Prénom:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <TextField fx:id="prenomField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    
    <Label text="Téléphone Mobile:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <TextField fx:id="telephoneMobileField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    
    <Label text="Email:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
    <TextField fx:id="emailField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
    
    <Label text="ID Département:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
    <TextField fx:id="idDepartementField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
    
    <Button text="Add Enseignant" onAction="#handleAddEnseignant" GridPane.rowIndex="6" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
</GridPane>
